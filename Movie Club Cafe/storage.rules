rules_version = '2';

// Firebase Storage Security Rules for Movie Club Cafe
service firebase.storage {
  match /b/{bucket}/o {
    
    // Profile Images - Users can upload/update their own profile image
    match /profile_images/{userId}.jpg {
      // Allow users to read any profile image
      allow read: if request.auth != null;
      
      // Allow users to write only to their own profile image
      allow write: if request.auth != null && request.auth.uid == userId
                    && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                    && request.resource.contentType.matches('image/.*');  // Only images
      
      // Allow users to delete their own profile image
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Alternative format for profile images (png, gif, etc.)
    match /profile_images/{userId}.{extension} {
      // Allow users to read any profile image
      allow read: if request.auth != null;
      
      // Allow users to write only to their own profile image
      allow write: if request.auth != null && request.auth.uid == userId
                    && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                    && request.resource.contentType.matches('image/.*');  // Only images
      
      // Allow users to delete their own profile image
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

